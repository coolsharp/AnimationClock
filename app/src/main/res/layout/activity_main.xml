<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coolsharp.panimationclockview.MainActivity">

    <com.coolsharp.animationclock.ClockView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:innerStrokeWidth="2dp"
        app:outerStrokeWidth="3dp"
        app:innerStrokeColor="@android:color/white"
        app:outerStrokeColor="@android:color/black"
        app:colonColor="@android:color/black"/>

</android.support.constraint.ConstraintLayout>
